@{
    ViewBag.Title = "Quản lý danh mục sản phẩm";
}
<div class="row">
    <div class="col-12 mb-3">
        <a href="javascript:void(0);" class="btn btn-info"
           onclick="AddEditCategory()"><i class="fas fa-plus"></i> Thêm danh mục</a>
    </div>
</div>
<table id="categoriesTable" class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<!-- Modal -->
<div id="addEditCategory" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="addEditCategoryForm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="CategoryId" name="CategoryId">
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>Tên danh mục:</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="CategoryName" name="CategoryName Name" class="form-control" data-rule-required="true">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="javascript:;" class="btn btn-primary" onclick="category.save()">Lưu</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section datatablejs{
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
        <script src="~/lib/bootbox.js/bootbox.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js"></script>
    </environment>
}
@section datatablecss{
    <environment include="Development">
        <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    </environment>
}
@section managerScript{
    <script src="~/js/categoriesManager.js"></script>
}