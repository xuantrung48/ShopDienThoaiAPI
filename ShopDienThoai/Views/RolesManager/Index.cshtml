@model IEnumerable<Role>
@{
    ViewBag.Title = "Vai trò trên trang";
}
<a asp-controller="RolesManager" asp-action="Create" class="btn btn-primary mb-3"><i class="fa fa-plus"></i> Thêm vai trò</a>
<table class="table table-hover table-responsive table-bordered display w-100 d-block d-md-table" id="rolesTable">
    <thead>
        <tr class="thead-dark">
            <th>Tên vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a asp-controller="RolesManager" asp-action="Edit" asp-route-id="@role.RoleId" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section datatablejs{
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    </environment>
    <script>
        $(document).ready(function () {
            $('#rolesTable').DataTable();
        });
    </script>
}
@section datatablecss{
    <environment include="Development">
        <link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    </environment>
}