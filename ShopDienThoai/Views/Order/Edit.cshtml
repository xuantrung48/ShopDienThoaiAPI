@model OrderDetailViewModel
@{
    ViewBag.Title = "Chỉnh sửa đơn hàng";
}
<h2>@ViewBag.Title</h2>
@if (Model.OrderStatus != OrderStatus.Pending)
{
    <h2 class="text-danger">Bạn không thể chỉnh sửa đơn hàng này!</h2>
}
else
{
    <form enctype="multipart/form-data" asp-controller="Order" asp-action="Edit" method="post">
        <input hidden asp-for="OrderId" value="@Model.OrderId" />
        <div class="row form-group">
            <div class="col-md-3">
                Sản phẩm:
            </div>
            <div class="col-md-9">
                <a asp-controller="Home" asp-action="ViewProduct" asp-route-id="@Model.ProductId" target="_blank">
                    @Model.ProductName
                </a>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-3">
                <label asp-for="CustomerName">Tên người nhận: </label>
            </div>
            <div class="col-md-9">
                <input asp-for="CustomerName" class="form-control" placeholder="Nguyễn Văn A">
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-3">
                <label asp-for="CustomerPhoneNumber">Số điện thoại: </label>
            </div>
            <div class="col-md-9">
                <input asp-for="CustomerPhoneNumber" class="form-control" placeholder="0988888888">
                <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-3">
                <label asp-for="CustomerAddress">Địa chỉ giao hàng: </label>
            </div>
            <div class="col-md-9">
                <input asp-for="CustomerAddress" class="form-control" placeholder="28 Nguyễn Tri Phương, TP.Huế, Thừa Thiên Huế">
                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-controller="Order" asp-action="OrderDetail" asp-route-id="@Model.OrderId" class="btn btn-secondary mx-3">Huỷ</a>
            </div>
        </div>
    </form>

    @section ValidateScript
    {
        <environment include="Development">
            <script src="~/lib/jquery-validate/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
        </environment>
    }
}